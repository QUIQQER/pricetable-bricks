<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>
    <bricks>

        <!-- Price Table -->
        <brick control="\QUI\PriceTableBricks\Bricks\PriceTable">
            <title>
                <locale group="quiqqer/pricetable" var="bricks.PriceTable.title"/>
            </title>
            <description>
                <locale group="quiqqer/pricetable" var="bricks.PriceTable.description"/>
            </description>

            <settings>
                <setting name="inherit-template-colors" type="checkbox">
                    <locale group="quiqqer/pricetable" var="pricetable.inheritTemplateColors"/>
                </setting>

                <setting name="pricetable.display" type="select">
                    <text>
                        <locale group="quiqqer/pricetable"
                                var="pricetable.display.title"/>
                    </text>
                    <option value="default">
                        <locale group="quiqqer/pricetable"
                                var="pricetable.display.default"/>
                    </option>
                </setting>

                <setting name="feature-lines" type="number">
                    <locale group="quiqqer/pricetable" var="pricetable.featureLines"/>
                </setting>

                <setting name="entries" data-qui="package/quiqqer/pricetable-bricks/bin/Controls/PriceTable">
                    <locale group="quiqqer/pricetable" var="PriceTable.entries"/>
                </setting>
            </settings>
        </brick>

